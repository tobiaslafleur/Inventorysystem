<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #2F3537;" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="View.ApplicationPage">
   <children>
      <Button fx:id="addProductBtn" layoutX="6.0" layoutY="40.0" mnemonicParsing="false" onAction="#addProduct" prefHeight="25.0" prefWidth="85.0" text="Add Product" />
      <Button layoutX="6.0" layoutY="74.0" mnemonicParsing="false" onAction="#addSupplier" text="Add Supplier" />
      <Button layoutX="6.0" layoutY="108.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="85.0" text="Update Qty." />
      <Button fx:id="logOutBtn" layoutX="523.0" layoutY="360.0" mnemonicParsing="false" onAction="#logOut" prefHeight="25.0" prefWidth="62.0" text="Log Out" />
      <ImageView fitHeight="72.0" fitWidth="85.0" layoutX="6.0" layoutY="317.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../images/logo.png" />
         </image>
      </ImageView>
      <Button id="addCategoryBtn" fx:id="addCategory" layoutX="6.0" layoutY="142.0" mnemonicParsing="false" onAction="#addCategory" prefHeight="25.0" prefWidth="85.0" text="Add Category">
         <font>
            <Font size="11.0" />
         </font>
      </Button>
      <TableView fx:id="infoTable" layoutX="99.0" layoutY="4.0" prefHeight="349.0" prefWidth="495.0">
        <columns>
            <TableColumn fx:id="colID" prefWidth="75.0" text="ID" />
          <TableColumn fx:id="colName" prefWidth="75.0" text="Name" />
            <TableColumn fx:id="colStock" prefWidth="75.0" text="Quantity" />
            <TableColumn fx:id="colPrice" prefWidth="75.0" text="Price" />
            <TableColumn fx:id="colCategory" prefWidth="75.0" text="Category" />
            <TableColumn fx:id="colShelf" prefWidth="75.0" text="Shelf" />
            <TableColumn fx:id="colSupplier" prefWidth="75.0" text="Supplier" />
            <TableColumn fx:id="colCost" prefWidth="75.0" text="Cost" />
        </columns>
      </TableView>
      <Button fx:id="removeBtn" layoutX="6.0" layoutY="177.0" mnemonicParsing="false" onAction="#removeProduct" prefHeight="25.0" prefWidth="85.0" text="Remove Product" />
      <Button fx:id="updateBtn" layoutX="6.0" layoutY="210.0" mnemonicParsing="false" onAction="#updateProduct" prefHeight="25.0" prefWidth="85.0" text="Update Product Info" />
   </children>
</AnchorPane>
