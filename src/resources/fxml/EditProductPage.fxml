<AnchorPane prefHeight="400.0" prefWidth="250.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="View.EditProductPage">
   <children>
      <Label layoutX="82.0" layoutY="32.0" text="Edit Product" textFill="WHITE">
         <font>
            <Font size="17.0" />
         </font>
      </Label>
      <Hyperlink fx:id="cancel" layoutX="207.0" layoutY="5.0" onAction="#cancel" text="Cancel" />
