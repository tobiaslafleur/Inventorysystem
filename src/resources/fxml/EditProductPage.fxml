      <TextField fx:id="name" layoutX="51.0" layoutY="107.0" promptText="Name" />
      <TextField fx:id="quantity" layoutX="51.0" layoutY="144.0" promptText="Quantity" />
      <TextField fx:id="price" layoutX="51.0" layoutY="181.0" promptText="Price" />
      <TextField fx:id="cost" layoutX="51.0" layoutY="217.0" promptText="Cost" />
      <Button fx:id="updateBtn" layoutX="-1.0" layoutY="361.0" mnemonicParsing="false" onAction="#updateProduct" prefHeight="40.0" prefWidth="257.0" text="Update product" />
      <ComboBox fx:id="categories" layoutX="53.0" layoutY="257.0" prefWidth="150.0" promptText="Category" />
      <ComboBox fx:id="shelves" layoutX="53.0" layoutY="295.0" prefWidth="150.0" promptText="Shelf" />
   </children>
</AnchorPane>
